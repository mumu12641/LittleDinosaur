<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Coming soon"-->
<!--        android:textColor="@color/black"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:textSize="20sp"/>-->
    <RelativeLayout
        android:id="@+id/research_line1"
        android:layout_margin="25dp"
        android:background="@drawable/edit_bk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/calendar_line1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calendartext1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="2021年11月 农历十月二十六"
                android:textSize="10sp" />
        </LinearLayout>
       <LinearLayout
           android:layout_below="@+id/calendar_line1"
           android:id="@+id/calendar_line2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/calendartext2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="30"
               android:textColor="@color/black"
               android:textSize="75sp"
               app:fontFamily="monospace" />
       </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_line2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendartext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="星期二 | Tuesday"
                android:textSize="10sp"
                app:fontFamily="monospace" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_line3"
            android:id="@+id/calendar_line4"
            android:orientation="vertical"
            android:background="@drawable/motto_bk">

            <TextView
                android:id="@+id/mottotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="世上只有一种英雄主义，就是在认清生活真相之后依然热爱生活"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/mottoauther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="--罗曼罗兰"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:fontFamily="monospace" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/research_line1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/motto_bk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/note_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titletext"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📃To Do List"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/addnote_btn"
                    android:layout_margin="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add" />
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/note_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_line1"/>
    </RelativeLayout>
</RelativeLayout>