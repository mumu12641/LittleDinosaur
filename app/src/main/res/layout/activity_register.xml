<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="25dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dragon1"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/registertext"
            android:layout_gravity="center"/>
    </LinearLayout>

    <EditText
        android:id="@+id/textemail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="30dp"
        android:hint="请输入您的邮箱"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:selectAllOnFocus="true"
        android:background="@drawable/edit_bk"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:drawablePadding="20dp"/>
<!--        android:drawableLeft="@drawable/email"-->

    <EditText
        android:id="@+id/textpassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textemail"
        android:layout_marginTop="20dp"
        android:hint="请设置您的密码"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:selectAllOnFocus="true"
        android:background="@drawable/edit_bk"
        android:paddingLeft="10dp"
        android:inputType="numberPassword"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/textconfirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textpassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bk"
        android:paddingLeft="10dp"
        android:drawablePadding="20dp"
        android:hint="请输入验证码"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        android:textColorHint="#000000"/>

    <Button
        android:id="@+id/getkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textconfirm"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:text="获取验证码"
        android:textSize="20sp" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getkey"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:text="确认注册"
        android:textColor="#000000"
        android:textSize="20sp"/>

</RelativeLayout>