<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#646464"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/update_dialog"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/icon_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/update_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon1"/>
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换个好康的头像叭~"
                android:layout_toRightOf="@+id/update_icon"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/icon_line1"
            android:id="@+id/icon_line2"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/icon1"
                android:layout_gravity="center"
                android:layout_below="@+id/icon_line1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_line2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/icon_change"
                android:layout_margin="5dp"
                android:text="换一个"
                android:background="@drawable/bg_update_btn"
                android:layout_toLeftOf="@+id/icon_confirm"/>
            <Button
                android:id="@+id/icon_confirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="就这个了"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_update_btn"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>